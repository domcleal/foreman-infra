<VirtualHost *:80>
  DocumentRoot         <%= @webdir %>/
  ServerName           <%= @vhost %>.theforeman.org

  <Directory />
    Options Indexes FollowSymLinks
  </Directory>

  LogLevel warn
  ServerSignature Off

  ErrorLog /var/www/vhosts/<%= @vhost %>/logs/error.log
  LogLevel warn
  CustomLog /var/www/vhosts/<%= @vhost %>/logs/access.log combined
  ServerSignature Off
</VirtualHost>
